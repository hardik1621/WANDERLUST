<% layout("/layouts/boilerplate.ejs") %>
<body>
    
    <div id="filters" class="menu-container flex-wrap align-items-center"  >
        <div style="display: flex;" class="menu-container flex-wrap align-items-center">
            
            <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-city"></i></div>
                <p>Cities</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain-sun"></i></div>
                <p>Mountains</p>
            </div>
            <div class="filter">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castles</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing Pools</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-cow"></i></div>
                <p>Farms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-umbrella-beach"></i></div>
                <p>Beach</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-sun-plant-wilt"></i></div>
                <p>Desert</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-igloo"></i></i></div>
                <p>Dome</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-ship"></i></div>
                <p>Houseboat</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-snowflake"></i></div>
                <p>Arctic</p>
            </div>
            
        </div>

        <div class="tax-switch">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
            </div>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <%for(let listing of allListing){%>
            <a href="/listings/<%=listing._id%>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%= listing.image.url%>" class="card-img-top" alt="..." style="height: 20rem">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text">
                        <b><%= listing.title%></b>
                        <br>
                        <span class="price-info">&#8377;<u><%= listing.price.toLocaleString("en-IN")%></u> /Night </span>
                        <span class="tax-info">&#8377;<u><%= (listing.price+listing.price*(18/100)).toLocaleString("en-IN")%></u> /Night <i style="font-size: 0.8rem;">with taxes</i></span>
                      </p>
                    </div>
                </div>
            </a>
        <%}%>
    </div>
</body>


