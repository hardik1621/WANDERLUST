<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">Login on Wanderlust</h1>
    <div class="col-6 offset-3" >
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <lable for="username" class="form-label">Username</lable>
                <input type="text" name="username" placeholder="Enter username" class="form-control" id="username" required>
            </div>
            <div class="mb-3">
                <lable for="password" class="form-label">Password</lable>
                <input type="password" name="password" placeholder="Enter password" class="form-control" id="password" required>
            </div>
            <button type="submit" class="btn btn-success">Login</button>
        </form>
    </div>
</div>